{
	"icon": "preferences-desktop-font",
	"label": "Better Font Rendering",
	"description": "Improve the font rendering for better readability.",
	"category": "Tweaks",
	"scripts": {
		"exec": {
			"label": "Set up",
			"command": "run-as-root dnf -y install ozon-font-config"
		},
		"undo": {
			"label": "Revert",
			"command": "run-as-root dnf -y --setopt clean_requirements_on_remove=1 erase ozon-font-config"
		},
		"status": { "command": "rpm --quiet --query ozon-font-config" }
	}
}
