{
	"label": "Permissive SELinux",
	"description": "Set SELinux to permissive mode",
	"category": "Tweaks",
	"scripts": {
		"exec": {
			"label": "Set up",
			"script": "run-as-root sed -i s/^SELINUX=.*$/SELINUX=permissive/g /etc/selinux/config"
		},
		"undo": {
			"label": "Revert",
			"script": "run-as-root sed -i s/^SELINUX=.*$/SELINUX=enforcing/g /etc/selinux/config"
		},
		"status": { "script": "grep --quiet ^SELINUX=permissive$ /etc/selinux/config" }
	}
}
